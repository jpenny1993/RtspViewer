<UserControl
    x:Class="RtspViewer.WinUi.Views.VideoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RtspViewer.WinUi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:RtspViewer.WinUi.Models"
    xmlns:viewmodels="using:RtspViewer.WinUi.ViewModels"
    mc:Ignorable="d">

    <StackPanel>
        <Image Source="{x:Bind _image, Mode=OneWay}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
    </StackPanel>
</UserControl>
